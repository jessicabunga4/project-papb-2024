<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="7dp"
    android:background="@drawable/white_background"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/ivGambarK"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvProdukK"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Nama Produk"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/ivGambarK"
        app:layout_constraintTop_toTopOf="@+id/ivGambarK" />

    <ImageView
        android:id="@+id/ivHapus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tvProdukK"
        app:layout_constraintTop_toTopOf="@+id/tvProdukK"
        app:srcCompat="@drawable/hapus" />

    <TextView
        android:id="@+id/tvHargaK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="harga"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivGambarK"
        app:layout_constraintStart_toEndOf="@+id/ivGambarK" />

    <TextView
        android:id="@+id/tvDeskripsiK"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingRight="50dp"
        android:text="dekripsi"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/ivGambarK"
        app:layout_constraintTop_toBottomOf="@+id/tvProdukK" />

</androidx.constraintlayout.widget.ConstraintLayout>